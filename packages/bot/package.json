    "lint": "eslint \"src/**/*.ts*\"",
    "test-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.21",
    "eslint": "^8.0.1",
    "eslint-config-discordeno": "*",
    "tsconfig": "*",
    "@discordeno/gateway": "18.0.0-alpha.1",
    "@discordeno/rest": "18.0.0-alpha.1",
    "@discordeno/types": "18.0.0-alpha.1",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@types/node": "^18.11.9"
  }
}