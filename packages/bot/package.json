{
  "name": "@discordeno/bot",
  "version": "18.0.0-alpha.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "build": "swc src --out-dir dist",
    "build-types": "tsc --declaration --emitDeclarationOnly --declarationDir dist",
