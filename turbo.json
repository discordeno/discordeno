{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**/*.js"
      ],
      "inputs": [
        "src/**/*.ts"
      ]
    },
    "build:type": {
      "dependsOn": [
        "^build:type"
      ],
      "outputs": [
        "dist/**/d.ts",
        "dist/**/d.ts.map",
        "dist/tsconfig.tsbuildinfo"
      ]
    },
    "release-build": {
      "dependsOn": [
        "^build:type"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test:unit": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:test-type": {
      "dependsOn": [
        "^build:type"
      ]
    },
    "lint": {
      "dependsOn": [
        "^build:type"
      ]
    },
    "fmt": {},
    "dev": {
      "cache": false
    }
  }
}