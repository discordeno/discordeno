{
  "name": "discordeno-monorepo",
  "version": "18.0.0-alpha.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/plugins/cache"
  ],
  "scripts": {
    "build": "turbo run build",
    "fmt": "turbo run fmt",
    "build-types": "turbo run build-types",
    "release-build": "turbo run release-build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test-types": "turbo run test-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.28.0",
    "eslint-config-discordeno": "*",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "turbo": "^1.6.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.ts": "eslint --fix",
    "*.js": "eslint --fix"
  },
  "packageManager": "yarn@3.3.0"
}
