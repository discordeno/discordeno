{
  "name": "discordeno-monorepo",
  "version": "18.0.0-alpha.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/plugins/cache"
  ],
  "scripts": {
    "build": "turbo run build --parallel",
    "fmt": "turbo run fmt --parallel",
    "build-types": "turbo run build-types",
    "release-build": "turbo run release-build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "build:doc": "jsdoc2md --files ./packages/**/*.ts --template readme.hbs --configure ./jsdoc2md.json > ./apps/site/docs/generated/index.md "
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "eslint": "^8.28.0",
    "eslint-config-discordeno": "*",
    "husky": "^8.0.2",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^8.0.0",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "turbo": "^1.6.3",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --ignore-unknown --write",
    "*.ts": "eslint --fix --ignore"
  },
  "packageManager": "yarn@1.22.19"
}
